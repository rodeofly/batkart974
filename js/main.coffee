$ ->
  batkart = (file) ->
    $.getJSON file, ( data ) -> 
      THEMES = data
      themes = Object.keys(THEMES)
      $( ".deck" ).empty()
      for theme in themes
        set = new CardSet theme
        for s in set.set
          $( ".deck" ).append s
      
      $(".deck").sortable()
      $( ".verso" ).hide()
      $( ".carte"  ).on "click", -> $( this ).find(".recto, .verso").toggle()
  
  $( "#toggle" ).on "click", -> $( ".recto, .verso" ).toggle()
  $( "#cycle3" ).on "click", -> batkart "cycle3.json"
